<div class="row">
  <div class="col-md-7 banner">
    <h1><span class="text-red">ROJO</span> Find parking spots as if they were yours! </h1>
  </div>
</div>


<%= form_tag search_path, method: :get do %>
<div class="row">
  <div class="col-md-6">
    <%= text_field_tag :search,  params[:search], placeholder: "Where are you going?", class: "form-control", id:"autolocation"%>
  </div>
  <div class="col-md-3">
    <%= text_field_tag :start_date, params[:start_date], placeholder: "Start Date", class: "form-control datepicker" %>
  </div>
  <div class="col-md-3">
    <%= text_field_tag :end_date, params[:end_date], placeholder: "End Date", class: "form-control datepicker" %>
  </div>
</div>
<br><br>

<div class="row">
  <div class="col-md-offest-4 col-md-4">
    <%= submit_tag "Search", class: "btn btn-normal btn-block" %>
  </div>
</div>
<% end %>

<br><hr><br>

<!-- PARKING SPOTS  -->
<div><h3>Parking Spots</h3></div>
<br>

<div class="row">
  <%= render partial: "parkings/parkings_list", locals: {parkings: @parkings} %>
</div>

<!-- CITIES  -->
<div><h3>Cities</h3></div>
<br>

<div class="row">
  <div class="col-md-3 col-sm-12">
    <a href="http://localhost:3000/search?utf8=%E2%9C%93&search=denver">
      <div class="discovery-card" style="background-image: url('assets/DN.jpeg')"></div>
    </a>
  </div>
  <div class="col-md-3 col-sm-12">
    <a href="http://localhost:3000/search?utf8=%E2%9C%93&search=los+angeles">
      <div class="discovery-card" style="background-image: url('assets/LA.jpeg')"></div>
    </a>
  </div>
  <div class="col-md-3 col-sm-12">
    <a href="http://localhost:3000/search?utf8=%E2%9C%93&search=miami">
      <div class="discovery-card" style="background-image: url('assets/MI.jpeg')"></div>
    </a>
  </div>
  <div class="col-md-3 col-sm-12">
    <a href="http://localhost:3000/search?utf8=%E2%9C%93&search=new+york">
      <div class="discovery-card" style="background-image: url('assets/NY.jpeg')"></div>
    </a>
  </div>
</div>

<script>
$('#start_date').datepicker({
  dateFormat: 'dd-mm-yy',
  minDate: 0,
  maxDate: '3m',
  onSelect: function(selected) {
    $('#end_date').datepicker("option", "minDate", selected);
    $('#end_date').attr("disabled", false);
  }
});

$('#end_date').datepicker({
  dateFormat: 'dd-mm-yy',
  minDate: 0,
  maxDate: '3m',
  onSelect: function(selected) {
    $('#start_date').datepicker("option", "maxDate", selected);
  }
});

$(function() {
  $('#autolocation').geocomplete()
})
</script>
