<div class="row ">
  <div class="col-md-3">
<%= render 'parking_menu'%>
  </div>
  <div class="col-md-9">
    <div class="panel panel-default">

      <div class="panel-heading">
        Description
      </div>

      <div class="panel-body">
        <div class="container">
          <%= form_for @parking do |f| %>

          <div class="row">
            <div class="form-group">
              <label> Listing name </Label>
                <%= f.text_field :listing_name, placeholder: "What is your listing name?", class: "form-control", required: true%>
            </div>
          </div>

          <div class="row">
            <div class="form-group">
              <label> Summary </Label>
                <%= f.text_field :summary, rows: 5, placeholder: "Summary of your parking spot", class: "form-control", required: true%>
            </div>
          </div>

          <div class="text-center">
            <%= f.submit "Save", class: "btn btn-form"%>

          </div>
          <%end%>
        </div>
      </div>

    </div>
  </div>
</div>
