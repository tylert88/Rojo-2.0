<!-- Image  -->
<div class="row">
  <div class="col-md-12">
    <%= image_tag @parking.cover_photo(nil), width: "100%" %>
  </div>
</div>
<br>

<div class="row">

  <!-- Left panel -->
  <div class="col-md-8">


  <!-- Listing Name -->
    <div class="row">
      <div class="col-md-8">
        <h1><%= @parking.listing_name %></h1>
          <%= @parking.address %>
      </div>
      <div class="col-md-4 text-center">
        <%= image_tag avatar_url(@parking.user), class: "img-circle avatar-large" %><br><br>
          <%= @parking.user.fullname %>
      </div>
    </div>
    <hr>

  <!-- Parking Info -->
    <div class="row text-babu">
      <div class="row text-center row-space-1">
        <div class="col-md-3">
            <i class="fa fa-map-marker fa-2x"></i>
        </div>
        <div class="col-md-3">
            <i class="fa fa-road fa-2x"></i>
        </div>
        <div class="col-md-3">
            <i class="fa fa-car fa-2x"></i>
    </div>
        <!-- <div class="col-md-3">
            <i class="fa fa-user-circle-o fa-2x"></i>
        </div> -->
      </div>

    <div class="row text-center">
      <div class="col-md-3"><%= pluralize(@parking.accommodate, "Spot") %></div>
      <div class="col-md-3"><%= @parking.space_type %></div>
      <div class="col-md-3"><%= @parking.parking_type %></div>
    </div>

    </div>
    <hr>

  <!-- Description  -->
    <div class="row">
      <div class="col-md-12">
        <h3>About this listing</h3>
          <p><%= @parking.summary%></p>
      </div>
    </div>
    <hr>

    <!-- Amenities -->
    <div class="row">
      <div class="col-md-3">
        <h4>Amenities</h4>
      </div>
      <div class="col-md-9">
        <div class="row">
          <div class="col-md-6">
            <ul class="amenities">
              <li class="<%= 'text-line-through' if !@parking.is_lighting %>">Lighting</li>
              <li class="<%= 'text-line-through' if !@parking.is_gated %>">Gated</li>
            </ul>
          </div>
          <div class="col-md-6">
            <ul class="amenities">
              <li class="<%= 'text-line-through' if !@parking.is_covered %>">Covered</li>
              <li class="<%= 'text-line-through' if !@parking.is_secure %>">Secure</li>
            </ul>
          </div>

        </div>
      </div>
    </div>
    <hr>

  <!-- Carousel -->
  <div class="row">

    <% if @photos.length > 0%>

  <div id="myCarousel" class="carousel slide" data-ride="carousel">
    <!-- Indicators -->
    <ol class="carousel-indicators">
      <% @photos.each do |photo|  %>
      <li data-target="#myCarousel" data-slide-to="<%= photo.id %>"></li>
      <% end %>
    </ol>

  <!-- Wrapper for slides -->
  <div class="carousel-inner">
      <% @photos.each do |photo|  %>
          <div class="item <%= 'active' if photo.id == @photos[0].id %>">
            <%= image_tag photo.image.url() %>
          </div>
      <% end %>
    </div>

    <!-- Left and right controls -->
    <a class="left carousel-control" href="#myCarousel" data-slide="prev">
      <span class="glyphicon glyphicon-chevron-left"></span>
      <span class="sr-only">Previous</span>
    </a>
      <a class="right carousel-control" href="#myCarousel" data-slide="next">
      <span class="glyphicon glyphicon-chevron-right"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>

  <% end %>

    </div>
    <hr>

<!-- REVIEWS -->
  <div class="row">
    <div class="col-md-12">
      <h3>
        <%= pluralize(@guest_reviews.count, "Review") %>
        <span id="average_rating"></span>
      </h3>
      <div class="container">
        <div><%= render "reviews/guest_list" %></div>
      </div>
    </div>
  </div>
  <br>
  <hr>

<!-- Google Map -->

  <div class="row">

    <div id="map" style="width: 100%; height: 400px">
      <script>
        function initialize() {
          let location = {lat: <%= @parking.latitude %>, lng: <%= @parking.longitude %>}
          let map = new google.maps.Map(document.getElementById('map'), {
            center: location,
            zoom: 14
          });

          let marker = new google.maps.Marker({
            position: location,
            map: map
          });

          let infoWindow = new google.maps.InfoWindow({
            content: '<div id="content"><%= image_tag @parking.cover_photo(:medium) %></div>'
          });

          infoWindow.open(map, marker)
          google.maps.event.addDomListener(window, 'load', initialize);
        }

      </script>

      <script async defer
        src="https://maps.googleapis.com/maps/api/js?key=AIzaSyA5NsjSuZ1HWVbbAkDkH_oOo1dGaZiF6dI&callback=initialize">
    </script>

    </div>
  </div>
  <hr>

  <!-- Near-by Parking -->
    <div class="row">
      <h3>Near By</h3>
        <% for parking in @parking.nearbys(20)%>
        <div class="col-md-4">
          <div class="panel panel-default">
            <div class="panel-heading preview">
              <%= image_tag parking.cover_photo(:medium) %>
            </div>
            <div class="panel-body">
              <%= link_to parking.listing_name, parking %><br>
              (<%= parking.distance.round(2) %> miles away)
            </div>
          </div>
        </div>
        <% end %>
    </div>
</div>



  <!-- Right panel -->
  <div class="col-md-4">
    <!-- Reservation Form -->
    <%= render 'reservations/form'%>

  </div>
</div>

<script>
  $('#average_rating').raty({
    path: '/assets',
    readonly: true,
    score: <%= @parking.average_rating %>
  });
</script>
